<script lang="ts">
  import { page } from "$app/stores"

  export let href = "/"

  let active = false

  if ($page.url.pathname.length === 1 && href.length === 1) {
    active = true
  } else if ($page.url.pathname.includes(href) {
    active = true
  }

</script>

<a
  href={href}
  class={`font-bold capitalize rounded-full px-6 py-2 ${active ? "bg-neutral-600" : ""}`}
>
  <slot/>
</a>
